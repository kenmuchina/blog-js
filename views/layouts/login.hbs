<nav></nav>

<form action="/newarticle/" method="POST">
    <div id="logo">
        <span id="logoIcon"></span>
        <span id="logoName">Mosina</span>
    </div>
    <div class="email">  
        <div>
            <label for="email">Email :</label>
            <div class="email-error"></div>            
            <div>
                <input type="email" value="email" required=true >
            </div>
        </div>
    </div>
    <div class="passwordlogin">  
        <div>
